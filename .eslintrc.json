{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "quotes": ["warn", "single", "avoid-escape"],
        "indent": ["warn", 2],
        "semi": ["error", "always"]
    }
}
